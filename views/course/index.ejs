<%- include ("../partials/header") %> 

     <header class="jumbotron">
         <div class="container">
             <h1><i class="fas fa-campground"></i> Welcome To Goin'Campin'!</h1>
             <p>View our hand-picked course from all over the world</p>
             <p>
                <a class="btn btn-primary btn-lg" href="/course/new">Add New Course</a>
             </p>
              <p>
              <form action="/course" method="GET" class="form-inline" id="course-search">
                <div class="form-group">
                  <input type="text" name="search" placeholder="Course search..." class="form-control">
                </div>
              </form>
             </p>
         </div>
     </header>
     
     <div class="row text-center" id="course-grid">
        <% course.forEach(function(course){ %>
            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                <div class="card">
                   <img class="card-img-top" src="<%= course.image %>">
                   <div class="card-body">
                       <h5 class="card-title"><%= course.title %></h5>
                       <% if (course.rating === 0) { %>
                            <em>No reviews yet.</em>
                        <% } else { %>
                            <span class="fa fa-star checked"></span>
                            <span class="fa fa-star <% if (course.rating > 1.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 2.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 3.5) { %> checked <% } %>"></span>
                            <span class="fa fa-star <% if (course.rating > 4.5) { %> checked <% } %>"></span>
                        <% } %>
                       <a href="/course/<%= course._id %>" class="btn btn-primary">More Info</a>
                   </div>
                </div>
            </div>
        <% }); %>
    </div>
<%- include ("../partials/footer") %>
