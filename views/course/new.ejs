<%- include ("../partials/header") %>
    <div class="row justify-content-center">
        <div class="col-md-12 text-center">
            <h1>Create a New Course</h1>
        </div>
        <div class="col-xs-12 col-md-6 col-lg-4">
            <form action="/course" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name">Course Title</label>
                    <input class="form-control" type="text" name="title" id="name" placeholder="Yosemite">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input class="form-control" type="file" accept="image/*" name="image" id="image" required>
                </div>
                <div class="form-group">
                    <label for="cost">Students Enrolled</label>
                    <input class="form-control" type="number" name="studentNo" id="cost" placeholder="9" step="1" min="0" required>
                </div>
                <div class="form-group">
                    <label for="location">Location</label>
                    <input class="form-control" type="text" name="location" id="location" placeholder="Yosemite National Park, CA">
                </div>
                <div class="form-group">
                    <label for="description">Description</label>
                    <input class="form-control" type="text" name="description" id="description" placeholder="Californiaâ€™s Sierra Nevada mountains.">
                </div>
                <div class="form-group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/course">Go Back</a>
        </div>
    </div>
    <%- include ("../partials/footer") %>

