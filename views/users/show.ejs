<%- include ("../partials/header") %>
<div class="row">
    <div class="col-md-6">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="<%=user.avatar%>" class="card-img" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= user.firstName + " " + user.lastName%></h5>
                  <p class="card-text">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis ab nostrum illo quaerat aperiam eaque qui voluptatibus tempora odio sapiente veniam, a ut possimus explicabo ea voluptatem, aut perspiciatis dolorem quisquam iusto amet quasi porro blanditiis harum. Aliquam, aut accusantium.
                    <br>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Animi quidem enim excepturi illo libero similique temporibus quibusdam, suscipit iusto nam.
                    <div><a class="stretched-link" href="mailto:<%=user.email%>"><%=user.email%></a></div>
                    <a href="/follow/<%= user.id %>"><button class="btn btn-primary">Follow <%= user.username %></button></a>
                  </p>
                  <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
                </div>
              </div>
            </div>
          </div> 
    </div>
    <div class="col-md-6">
        <h3><%=user.username%>'s courses:</h3>
        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <% var lis = 0%>
                    <% course.forEach(function(course){ %>
                        <% if(lis===0) {%>
                            <a class="list-group-item list-group-item-action active" id="list-q<%=lis%>" data-toggle="list" href="#q<%=lis%>" role="tab" aria-controls="xr<%=lis%>"><%= course.title %></a>
                        <% } else { %>
                            <a class="list-group-item list-group-item-action" id="list-q<%=lis%>" data-toggle="list" href="#q<%=lis%>" role="tab" aria-controls="xr<%=lis%>"><%= course.title %></a>
                        <% } %>
                        <% lis+=1%>
                    <% }) %>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <%var count = 0%>
                    <% course.forEach(function(course){ %>
                        <% if(count===0) {%>
                            <div class="tab-pane fade show active" id="q<%=count%> " role="tabpanel" aria-labelledby="list-q<%=count%>"><%= course.description %></div>
                        <% } else { %>
                            <div class="tab-pane fade" id="q<%=count%> " role="tabpanel" aria-labelledby="list-q<%=count%>"><%= course.description %></div>
                        <% } %>    
                        <% count+=1 %> 
                    <% }) %>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include ("../partials/footer") %>