<%- include ("../partials/header") %>
<div class="row">
    <div class="col-md-6">
        <div class="card mb-3" style="max-width: 540px;">
            <div class="row no-gutters">
              <div class="col-md-4">
                <img src="<%=user.avatar%>" class="card-img" alt="...">
              </div>
              <div class="col-md-8">
                <div class="card-body">
                  <h5 class="card-title"><%= user.firstName + " " + user.lastName%></h5>
                  <p class="card-text">
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Quis ab nostrum illo quaerat aperiam eaque qui voluptatibus tempora odio sapiente veniam, a ut possimus explicabo ea voluptatem, aut perspiciatis dolorem quisquam iusto amet quasi porro blanditiis harum. Aliquam, aut accusantium.
                    <br>
                    Lorem ipsum dolor sit amet consectetur adipisicing elit. Animi quidem enim excepturi illo libero similique temporibus quibusdam, suscipit iusto nam.
                    <div><a class="stretched-link" href="mailto:<%=user.email%>"><%=user.email%></a></div>
                    <a href="/follow/<%= user.id %>"><button class="btn btn-primary">Follow <%= user.username %></button></a>
                    <% if(currenUser.isAdmin) { %>
                    <form action="/users/<%=user.id%>/ban?_method=PUT" method="post">
                        <button class="btn btn-sm btn-danger">Ban Permanently</button>
                    </form>
                    <form action="/users/<%=user.id%>/ban/temp?_method=PUT" method="post">
                        <input type="number" name="day" min="1" step="1" required>
                        <button class="btn btn-sm btn-danger">Ban Temporarily</button>
                    </form>
                    <% }%>
                  </p>
                  <p class="card-text"><small class="text-muted">Last updated <%= moment(comment.updatedAt).fromNow() %></small></p>
                </div>
              </div>
            </div>
        </div> 
    </div>
    <div class="col-md-6">
    <% if(currenUser.isProfessor || currenUser.isAdmin){ %>
        <h3><%=user.username%>'s courses:</h3>
        <div class="row">
            <div class="col-4">
                <div class="list-group" id="list-tab" role="tablist">
                    <% var lis = 0%>
                    <% course.forEach(function(course){ %>
                        <% if(lis===0) {%>
                            <a class="list-group-item list-group-item-action active" id="list-q<%=lis%>" data-toggle="list" href="#q<%=lis%>" role="tab" aria-controls="xr<%=lis%>"><%= course.title %></a>
                        <% } else { %>
                            <a class="list-group-item list-group-item-action" id="list-q<%=lis%>" data-toggle="list" href="#q<%=lis%>" role="tab" aria-controls="xr<%=lis%>"><%= course.title %></a>
                        <% } %>
                        <% lis+=1%>
                    <% }) %>
                </div>
            </div>
            <div class="col-8">
                <div class="tab-content" id="nav-tabContent">
                    <%var count = 0%>
                    <% course.forEach(function(course){ %>
                        <% if(count===0) {%>
                            <div class="tab-pane fade show active" id="q<%=count%> " role="tabpanel" aria-labelledby="list-q<%=count%>"><%= course.description %></div>
                        <% } else { %>
                            <div class="tab-pane fade" id="q<%=count%> " role="tabpanel" aria-labelledby="list-q<%=count%>"><%= course.description %></div>
                        <% } %>    
                        <% count+=1 %> 
                    <% }) %>
                </div>
            </div>
        </div>
    <% } %>
    </div>
    <div class="card">
        <div class="card-body">
          <% if(user.rating === 0) { %>
            <h5 class="card-title"><em>No Reviews Yet</em></h5>
          <% } else { %>
            <p>
              <span class="fa fa-star checked"></span>
              <span class="fa fa-star <% if (user.rating > 1.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 2.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 3.5) { %> checked <% } %>"></span>
              <span class="fa fa-star <% if (user.rating > 4.5) { %> checked <% } %>"></span>
              <em>(total reviews: <%= user.reviews.length %>)</em>
            </p>
            <h6> Current User rating: <strong><%= user.rating.toFixed(2) %></strong></h6>
            <p><h5 class="card-title">Latest reviews for user:</h4></p>
            <hr style="margin-top: 0;">
            <div class="row">
              <% user.reviews.slice(0, 5).forEach(function(review){ %>
                <div class="col-md-12 mb-2">
                  <div class="card">
                    <div class="card-body">
                      <div class="float-right">
                        <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                      </div>
                      <div class="float-left">
                        <div class="card-title">Review by: <strong><%= review.author.username %></strong></div>
                        <div class="card-subtitle mb-2"><em><%= review.updatedAt.toDateString() %></em></div>
                        <div class="card-text"><%= review.text %></div>
                      </div>
                      <% if(currentUser) { %>
                        <div class="float-right col-auto">
                          <form class="delete-form" action="/users/<%=user._id%>/reviews/<%=review._id%>/report?_method=PUT" method="post">
                            <button class="btn btn-sm btn-info">Report</button>
                          </form>
                        </div>
                      <% } %>
                      <% if(currentUser && review.author.id.equals(currentUser._id) || currentUser && currentUser.isAdmin){ %>
                        <div class="float-right col-auto">
                          <a href="/users/<%=user._id%>/reviews/<%=review._id%>/edit" class="btn btn-sm btn-warning">EDIT</a>
                          <form class="delete-form" action="/users/<%=user._id%>/reviews/<%=review._id%>?_method=DELETE" method="POST">
                            <button class="btn btn-sm btn-danger">DELETE</button>
                          </form>
                        </div>
                      <% } %>
                    </div>
                  </div>
                </div>
              <% }) %>
              <div>
                <h4 class="card-text my-2 ml-3"><a href="/users/<%= user._id %>/reviews"><i class="fa fa-search" aria-hidden="true"></i> See all reviews</a></h4>
              </div>
            </div>
          <% } %>
          <div class="card-text col-auto">
              <a class="btn btn-primary btn-lg <% if (currentUser && user.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/users/<%= user._id %>/reviews/new">Write a New Review</a>
          </div>
          <!-- </div> -->
        </div>
      </div>
</div>
<%- include ("../partials/footer") %>