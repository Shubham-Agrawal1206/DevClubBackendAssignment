<%- include("../partials/header") %>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h1 style="text-align: center">Review User: <%= user.username %></h1>
            <a href="/course/<%= user._id %>">Go back to the user page</a>
            <div class="thumbnail">
                <div class="caption-full">
                    <% if (user.rating === 0) { %>
                    <h5>
                        <em>No reviews yet.</em>
                    </h5>
                    <% } else { %>
                    <p>
                        <span class="fa fa-star checked"></span>
                        <span class="fa fa-star <% if (user.rating > 1.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (usser.rating > 2.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (user.rating > 3.5) { %> checked <% } %>"></span>
                        <span class="fa fa-star <% if (user.rating > 4.5) { %> checked <% } %>"></span>
                        <em>(total reviews: <%= user.reviews.length %>)</em>
                    </p>
                    <p>
                        Current user rating: <strong><%= user.rating.toFixed(2) %></strong>
                    </p>
                    <p><h4>All reviews for this user:</h4></p>
                    <hr style="margin-top: 0;">
                    <% user.reviews.forEach(function(review){ %>
                    <div class="row">
                        <div class="col-md-3">
                            <%- '<span class="fa fa-star checked"></span>'.repeat(review.rating) %><%- '<span class="fa fa-star"></span>'.repeat(5 - review.rating) %>
                            <% if(!currentUser.isAdmin && review.isAnonymous) { %>
                                <div>Review by: <strong>Anonymous</strong></div>
                            <% } else { %>
                                <div>Review by: <strong><%= review.author.username %></strong></div>
                            <% } %>
                            <span><em><%= review.updatedAt.toDateString() %></em></span>
                        </div>
                        <div class="col-md-9">
                            <p style="text-align: justify; word-wrap: break-word;">
                                <%= review.text %>
                            </p>
                            <div>
                                <form class="vote-up" data-id="<%=review._id%>" data-userId="<%=user._id%>">
                                  <input class="btn btn-sm btn-success" type="button" value="Vote Up">
                                </form>
                                <span class="card-text" id="<%=review._id%>"><%=review.vote.positive.length - review.vote.negative.length%></span>
                                <form class="vote-down" data-id="<%=review._id%>" data-userId="<%=user.id%>">
                                  <input class="btn btn-sm btn-danger" type="button" value="Vote Down">
                                </form>
                              </div>
                            <% if(currentUser && (review.author.id.equals(currentUser._id) || currentUser.isAdmin)){ %>
                            <a class="btn btn-xs btn-warning"
                               href="/users/<%=user._id %>/reviews/<%=review._id %>/edit">Edit</a>
                            <form id="delete-form" action="/users/<%=user._id %>/reviews/<%=review._id %>?_method=DELETE" method="POST">
                                <input type="submit" class="btn btn-xs btn-danger" value="Delete">
                            </form>
                            <% } %>
                        </div>
                    </div>
                    <hr>
                    <% }); %>
                    <% } %>
                    <div>
                        <a class="btn btn-primary <% if (currentUser && user.reviews.some(function (review) {return review.author.id.equals(currentUser._id)})) { %> disabled <% } %>" href="/users/<%= user._id %>/reviews/new">
                            Write a New Review</a>
                    </div>
                    <div style="margin-top: 10px;">
                        <a class="btn btn-default" href="/users/<%= user._id %>"><i class="fa fa-arrow-left"></i> Go back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!--Review section-->
</div>

</div><!-- /.container -->
<footer id="sticky-footer" class="py-4 bg-dark text-white-50">
  <div class="container">
    <p class="text-muted">&copy; Goin'Campin' 2020 | <a href="/course">Home</a> | <a href="/course/new">New Course</a></p>
  </div>
</footer>
